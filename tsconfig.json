{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": ".",
        "strictNullChecks": true,
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "lib": ["es2017", "dom"],
        "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}
